- hosts: all
  gather_facts: false

  tasks:
    - name: Define files to check
      set_fact:
        file_list:
          - /opt/myapp/app.conf
          - /opt/myapp/db.conf
          - /opt/myapp/logging.conf

    - name: Stat each file in the list
      ansible.builtin.stat:
        path: "{{ item }}"
      loop: "{{ file_list }}"
      loop_control:
        loop_var: file_path
      register: file_stats

    - name: Report existing files
      debug:
        msg: "Present: {{ item.file_path }}"
      loop: "{{ file_stats.results }}"
      when: item.stat.exists and (item.stat.isreg | default(false))

    - name: Copy missing files from templates
      ansible.builtin.copy:
        src: "templates/{{ item.file_path | basename }}"
        dest: "{{ item.file_path }}"
        mode: '0644'
      loop: "{{ file_stats.results }}"
      when: not item.stat.exists


#########################

- name: Normalize profile lines
  set_fact:
    profile_lines: >-
      {{ 
        profiles_raw.stdout_lines 
        if profiles_raw.stdout_lines is defined else
        profiles_raw.results[0].stdout_lines 
        if profiles_raw.results is defined else
        profiles_raw
      }}
#################################

- name: Gather profile→hostname mapping
  hosts: all
  gather_facts: false
  vars:
    profile_cmd: /path/to/your/profile-list-script.sh

  tasks:
    - name: Run profile-to-hostname command
      ansible.builtin.command: "{{ profile_cmd }}"
      register: profile_out
      changed_when: false                        # doesn’t mark changed for data-gathering :contentReference[oaicite:9]{index=9}

    - name: Consolidate stdout_lines (single-run or looped)
      ansible.builtin.set_fact:
        profile_lines: >-
          {{
            (profile_out.results | default([profile_out]))
            | map(attribute='stdout_lines')
            | flatten
          }}

    - name: Build profile_map from lines
      ansible.builtin.set_fact:
        profile_map: "{{ dict(profile_lines | map('split', ': ') | list) }}"

    - name: Include cert tasks for each profile/host
      ansible.builtin.include_tasks: cert.yml
      loop: "{{ profile_map | dict2items }}"
      loop_control:
        loop_var: profile_item
      vars:
        profile_name: "{{ profile_item.key }}"
        target_host: "{{ profile_item.value }}"

