---
- name: Render SSL report
  template:
    src: templates/ssl_report.html.j2
    dest: "{{ report_file }}"

- name: Send report via email
  mail:
    host: smtp.your.domain
    port: 25
    to: ops-team@your.domain
    subject: "SSL Validation Report – {{ generated }}"
    body: "{{ lookup('file', report_file) }}"
    subtype: html
