servers = AdminTask.listServers('[-serverType APPLICATION_SERVER]').splitlines()
for entry in servers:
    serverName = entry.split('(')[0]
    nodeName   = entry.split('/nodes/')[1].split('/')[0]
    # List only HTTPS ports
    httpsPorts = AdminTask.listServerPorts(
        '[-serverName %s -nodeName %s -protocol HTTPS]' % (serverName, nodeName)
    ).strip()
    # Retrieve actual host
    nodeId   = AdminConfig.getid('/Node:%s/' % nodeName)
    hostName = AdminConfig.showAttribute(nodeId, 'hostName')
    print "Node: %s, Server: %s, Host: %s, HTTPS Port(s): %s" % (
        nodeName, serverName, hostName, httpsPorts
    )
